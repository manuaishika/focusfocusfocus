{
  "manifest_version": 3,
  "name": "Daily Task Tracker",
  "version": "1.0",
  "description": "Reminds you to do your daily LeetCode, GRE, etc., and shows a GitHub-style progress heatmap.",
  "permissions": ["storage", "alarms", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["heatmap.html", "heatmap.css", "heatmap.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

